<%= provide(:title, '注册') %>
<div class="row">
	<div class="span6 offset3">
		<h3>注册新账号</h3>
		<%= form_for @user, :url=>{:action=>"create"} do |f| %>
			<%= render "shared/error_messages", :object=>f.object %>
			<div class="clearfix">
				<%= f.label :email, "邮箱" %>
				<%= f.text_field :email, :placeholder=>"blacksource.hw@gmail.com" %>
			</div>
			<div class="clearfix">
				<%= f.label :passowrd, "密码" %>
				<%= f.password_field :password %>
			</div>
			<div class="clearfix">
				<%= f.label :name, "用户名" %>
				<%= f.text_field :name %>
			</div>
			<div>
				<%= f.submit "立即注册", :class=>"btn btn-large btn-primary"%>
			</div>
		<% end %>
	</div>
	<div>
		<h3>其他方式登录</h3>
		<ul>
			<li><a href="/auth/taobao"><img src="/assets/taobao.png"/></a></li>
			<li><a href="/auth/tsina"><img src="/assets/weibo.png"/></a></li>
			<li><%= link_to image_tag("weibo.png"), '/auth/tsina', :title=>"link to sina weibo" %></li>
		</ul>
	</div>
</div>