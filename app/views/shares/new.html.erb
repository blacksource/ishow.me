<link href="/assets/uploadify/uploadify.css" media="screen" rel="stylesheet" type="text/css">

<%= render "/products/item", :product=>@product %>
<%= form_for @share, :url=>"/shares/create" do |f| %>
	<div>
		<span>评价:</span>
		<%= f.text_area :comment, :class=>"text_input", :rows=>"3" %>
	</div>
	<div>
		<span>上传图片:</span>
		<input id="file_upload" type="file" name="file_upload" />
	</div>
	<ul id="share_imgs" class="share_imgs">
	</ul>	
	<div>
		<%= f.hidden_field :product_id, :value=>@share.product_id %>
		<%= f.submit "发布", :class=>"btn btn-large btn-primary" %>
	</div>		
<% end %>

<script type="text/javascript" src="/assets/uploadify/jquery.uploadify.js"></script>
<script type="text/javascript">
// <![CDATA[
$(document).ready(function() {
  $('#file_upload').uploadify({
    'swf'  				: '/assets/uploadify/uploadify.swf',
    'uploader'    		: '/uploadify/upload.html',
    'checkExisting' 	: '/uploadify/check',
    'cancelImage' 		: '/assets/uploadify/uploadify-cancel.png',
    'folder'    		: '/uploads',
    'multi'				: true,
    'auto'      		: true,
    'buttonText' 		: '浏览',
    'width'				: 80,
    'fileObjName'		: 'picture',
    'onUploadSuccess' 	: function(file, data, response){
		$("#share_imgs").append(data);    	
    }
  });
});
// ]]>
</script>

